<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/patient_dailog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Enter new BMI reading"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/newValue_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="New Value"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtNewBmi"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:inputType="number"
            android:layout_toRightOf="@+id/newValue_Text"
            android:background="#444444"
            android:singleLine="true"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/newValue_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/edtNewBmi"
            android:text="mg/dL"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>